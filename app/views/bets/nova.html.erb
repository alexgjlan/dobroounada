<%= render "layouts/header" %>
<div class="row">
    <div class="col-lg-4">
      
      <legend>Nova Sala de Apostas</legend>
      
      <%= form_for @bet, url: {controller: "bets", action: "bet_create"} do |f| %>
      <% if @bet.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@bet.errors.count, "error") %> prohibited this bet from being saved:</h2>
    
          <ul>
          <% @bet.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <label for="Nome">Nome: </label><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      
      <div class = "form-group">
        <label for="Descrição">Descrição: </label><br>
          <%= f.text_area :description, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <label for="Foto">Link para foto de perfil da sala: </label><br>
        <div class="input-group">
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-picture"></span>
          </span>
          <%= f.text_field :url_photo, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label "room_type", "Tipo de Sala:" %><br>
          <%= f.radio_button :room_type, "1", :checked => true %> 
          <%= f.label :room_type, "Pública", :value => "1" %> &nbsp;
          <%= f.radio_button :room_type, "0" %> 
          <%= f.label :room_type, "Privada", :value => "0"%>
      </div>
      
      <div class="form-group">
        <label  for="Valor apostado">Valor apostado: </label><br>
        
        <div class="input-group">
          <span class="input-group-addon">
            <span class = "glyphicon glyphicon-usd"></span>
          </span>
          <%= f.number_field :stake, class: "form-control" %>
        </div>
      </div>
     
      <div class="actions">
        <%= f.submit "Criar aposta", class: "btn btn-primary" %>
      </div>
      
      <% end %>
      
      <br>
      
      <%= link_to controller: "welcome", action: "painel" do %>
        <span class='glyphicon glyphicon-chevron-left'></span>&nbsp;Voltar
      <% end %>
      
    </div>
</div>
<%= render "layouts/footer" %>